<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#A5D6A7" />
            <gradient  android:angle="-90"  android:startColor="#A5D6A7" android:endColor="#A5D6A7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4caf50" />
            <solid  android:color="#4caf50"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4caf50" />
            <gradient  android:angle="-90"  android:startColor="#4caf50" android:endColor="#4caf50" />
        </shape>
    </item>
</selector>