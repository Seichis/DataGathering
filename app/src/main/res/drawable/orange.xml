<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFB74D" />
            <gradient  android:angle="-90"  android:startColor="#FFB74D" android:endColor="#FFB74D"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff9800" />
            <solid  android:color="#ff9800"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff9800" />
            <gradient  android:angle="-90"  android:startColor="#ff9800" android:endColor="#ff9800" />
        </shape>
    </item>
</selector>