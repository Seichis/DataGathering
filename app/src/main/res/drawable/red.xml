<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF8A80" />
            <gradient  android:angle="-90"  android:startColor="#FF8A80" android:endColor="#FF8A80"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f44336" />
            <solid  android:color="#f44336"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f44336" />
            <gradient  android:angle="-90"  android:startColor="#f44336" android:endColor="#f44336" />
        </shape>
    </item>
</selector>